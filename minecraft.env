# Minecraft server configuration

# Server basics
MC_PORT=25565
MC_TYPE=VANILLA      # Options: VANILLA, FORGE, BUKKIT, SPIGOT, PAPER, FABRIC, etc.
MC_VERSION=LATEST    # Specific version like 1.20.1 or LATEST
MC_MEMORY=4G         # Memory allocation for the server
MC_SERVER_NAME=My Minecraft Server

# Game settings
MC_GAMEMODE=survival # Options: survival, creative, adventure, spectator
MC_DIFFICULTY=normal # Options: peaceful, easy, normal, hard
MC_LEVEL_TYPE=DEFAULT
MC_MOTD="Welcome to My Awesome Minecraft Server"
MC_MAX_PLAYERS=20

# World generation
MC_SEED=             # Leave empty for random seed or specify one
MC_GENERATE_STRUCTURES=true
MC_MAX_WORLD_SIZE=10000
MC_VIEW_DISTANCE=10
MC_MAX_BUILD_HEIGHT=256

# Gameplay features
MC_PVP=true
MC_ALLOW_NETHER=true
MC_ENABLE_COMMAND_BLOCK=false
MC_SPAWN_ANIMALS=true
MC_SPAWN_MONSTERS=true
MC_SPAWN_NPCS=true
MC_ALLOW_FLIGHT=false
MC_FORCE_GAMEMODE=false

# Security
MC_ONLINE_MODE=false  # Set to false to allow cracked clients
MC_OPS=              # Comma-separated list of operator usernames
MC_WHITELIST=        # Comma-separated list of allowed usernames

# Server icon (Base64 encoded 64x64 PNG)
MC_ICON=